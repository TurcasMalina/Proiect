@page
@model Proiect.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h1>Index</h1>
        <form method="post" asp-page-handler="Logout" class="d-inline">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>

    <div class="mb-3">
        <a asp-page="Create" class="btn btn-success">Create New</a>
    </div>

    <table class="table table-hover table-responsive-md">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Car[0].Manufacturer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car[0].Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car[0].Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car[0].NumberOfKilometers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car[0].DealerName)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Car)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfKilometers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DealerName)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
