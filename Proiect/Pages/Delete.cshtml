@page
@model Proiect.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center card-title">Delete Car</h1>
                    <h3 class="text-center text-danger mb-4">Are you sure you want to delete this?</h3>
                    <dl class="row">
                        <dt class="col-sm-4">Manufacturer</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Car.Manufacturer)</dd>
                        <dt class="col-sm-4">Model</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Car.Model)</dd>
                        <dt class="col-sm-4">Year</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Car.Year)</dd>
                        <dt class="col-sm-4">Number of Kilometers</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Car.NumberOfKilometers)</dd>
                    </dl>
                    <form method="post" class="text-center">
                        <input type="hidden" asp-for="Car.Id" />
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
